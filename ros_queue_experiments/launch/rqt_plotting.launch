<launch>
    <arg name="experiment_name" default="Test"/>

    <!-- Plot of the estimation error between the real continuous average and the queue server estimations for the temperature -->
    <node pkg="rqt_plot" type="rqt_plot" name="EstimationErrorOfQueueServerVSReal_Temperature_$(arg experiment_name)" args="/NoRew_NoInv/monitoring_node/temperature/real_continuous_average_diff_with_server_mean /NoRew_Inv/monitoring_node/temperature/real_continuous_average_diff_with_server_mean /Rew_NoInv/monitoring_node/temperature/real_continuous_average_diff_with_server_time_average /Rew_Inv/monitoring_node/temperature/real_continuous_average_diff_with_server_time_average"/>
    <!-- Plot of the estimation error between the real continuous average and the queue server estimations for the localization -->
    <node pkg="rqt_plot" type="rqt_plot" name="EstimationErrorOfQueueServerVSReal_Localization_$(arg experiment_name)" args="/NoRew_NoInv/monitoring_node/localization/real_continuous_average_diff_with_server_mean /NoRew_Inv/monitoring_node/localization/real_continuous_average_diff_with_server_mean /Rew_NoInv/monitoring_node/localization/real_continuous_average_diff_with_server_time_average /Rew_Inv/monitoring_node/localization/real_continuous_average_diff_with_server_time_average"/>

    <!-- Plot of the error between the real continuous mean of the system and the target for the real_queue to see if the controller can do its stabilization.-->
    <node pkg="rqt_plot" type="rqt_plot" name="TargetErrorOfController_RealQueue_$(arg experiment_name)" args="/NoRew_NoInv/monitoring_node/real_queue/real_continuous_average_diff_with_target /NoRew_Inv/monitoring_node/real_queue/real_continuous_average_diff_with_target /Rew_NoInv/monitoring_node/real_queue/real_continuous_average_diff_with_target /Rew_Inv/monitoring_node/real_queue/real_continuous_average_diff_with_target"/>
    <!-- Plot of the error between the real continuous mean of the system and the target for the temperature to see if the controller can do its stabilization.-->
    <node pkg="rqt_plot" type="rqt_plot" name="TargetErrorOfController_Temperature_$(arg experiment_name)" args="/NoRew_NoInv/monitoring_node/temperature/real_continuous_average_diff_with_target /NoRew_Inv/monitoring_node/temperature/real_continuous_average_diff_with_target /Rew_NoInv/monitoring_node/temperature/real_continuous_average_diff_with_target /Rew_Inv/monitoring_node/temperature/real_continuous_average_diff_with_target"/>
    <!-- Plot of the error between the real continuous mean of the system and the target for the localization to see if the controller can do its stabilization.-->
    <node pkg="rqt_plot" type="rqt_plot" name="TargetErrorOfController_Localization_$(arg experiment_name)" args="/NoRew_NoInv/monitoring_node/localization/real_continuous_average_diff_with_target /NoRew_Inv/monitoring_node/localization/real_continuous_average_diff_with_target /Rew_NoInv/monitoring_node/localization/real_continuous_average_diff_with_target /Rew_Inv/monitoring_node/localization/real_continuous_average_diff_with_target"/>
</launch>