<!-- Starts a queue server with virtual queues that are fed by random Poisson distributions. -->
<launch>
    <!-- Creates the poisson distribution services -->
    <include file="$(find ros_queue_tests)/launch/poisson_distribution_sample.launch"/>

    <!-- Creates the queue server -->
    <include file="$(find queue_server)/launch/queue_server_template.launch">
        <arg name="queue_server_config_path" value="$(find ros_queue_tests)/config/queue_server_config_poisson.yaml"/>
        <arg name="server_name" value="poisson_queue_server"/>
    </include>

    <include file="$(find queue_server)/launch/periodic_udpate_caller.launch">
        <arg name="trigger_service_name" value="/poisson_queue_server/trigger_service"/>
        <arg name="update_rate" value="2.0"/>
    </include>
</launch>